   <!-- Button trigger modal -->
   <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong<%=book._id%>">
    See Notes
  </button>
  
  <!-- Modal -->
  
  <div class="modal fade" id="exampleModalLong<%=book._id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLong" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLong"> <%= book.title %> Notes</h5>  
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= book.description %>
        </div>
        <div class="modal-footer">
          <a href="/books/<%= book._id %>" class="btn btn-primary">Go to Full Page</a>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <form class="d-inline" action="/books/<%=book._id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
        </form>
        </div>
      </div>
    </div>
  </div>