<% layout('layouts/boilerplate')%> 

<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <img src="<%= book.image%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= book.title%></h5>
                <p class="card-text"><%= book.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Pages: <%= book.pages%></li>
                <li class="list-group-item">Score: <%= book.goodreadsScore%></li>
            </ul>
           
            <div class="card-body">
                <a class="card-link btn btn-info" href="/books/<%=book._id%>/edit">Edit Book Details</a>
                <form class="d-inline" action="/books/<%=book._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
        <div class="col-6">
            <form action="/books/<%=book._id%>/newnote" novalidate class="needs-validation" method="post" >
                <div class="mb-3">
                  <label for="title" class="form-label">Note Title</label>
                  <input type="text" class="form-control" id="tile" name="note[title]" required>
                </div>
                <div class="mb-3">
                  <label for="body" class="form-label">Note</label>
                  <textarea class="form-control" name="note[body]" id="body" cols="30" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit Note</button>
              </form>
            </div>
        </div>
        <% if(book.notes) { %>  
            <% for(let note of book.notes) { %>
                <div class="card mb-3 ">
                    <div class="card-body">
                        <h5 class="card-title">Title: <%= note.title %></h5>
                        <p class="card-text">Note: <%= note.body %></p>
                       
                    
                        
                    </div>
                </div>
                <% } %>
        <% } %> 
        
    
</div>
